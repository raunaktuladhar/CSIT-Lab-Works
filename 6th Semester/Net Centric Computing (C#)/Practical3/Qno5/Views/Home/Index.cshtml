@model Qno5.Models.StateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client-Side State Management</title>
</head>
<body>
    <h1>Client-Side State Management</h1>

    <form asp-action="Index" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="@Model.Name" required />
        <br />
        <label for="age">Age:</label>
        <input type="text" id="age" name="age" value="@Model.Age" required />
        <br />

        <button type="submit" name="source" value="cookie">Save in Cookie</button> <br />
        <button type="submit" name="source" value="queryString">Save in Query String</button> <br />
        <button type="submit" name="source" value="hiddenField">Save in Hidden Field</button> <br />
    </form>

    <h2>Stored Data:</h2>
    <p>Name: @Model.Name</p>
    <p>Age: @Model.Age</p>

    <p>

        <strong>----------</strong><br />
        Name: Raunak Tuladhar<br />
        Class Roll: 21-00011-5 (20780614)<br />
        TU Roll: 28569/078

    </p>
</body>
</html>